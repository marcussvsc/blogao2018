
<%= title "Homepage_Blogao"%>


<div class="row">
  <div class="col-xs-8">
    <% @posts.each do |post| %>

      <h2>Title: <%= post.title%></h2>
      <h3>Subject: <%= post.subject%></h3>
      <h3>Category: <%= post.category.description %></h3>
      <p>Text: <%= postText( post.text) %></p>
      <strong>Author <%= post.author.name %></strong>

      <hr/>
    <% end %>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Panel title</h3>
      </div>
      <div class="panel-body">
        <ul>

          <% Category.all.each do |category| %>
            <li>
              <%= link_to category.description, homepage_posts_path(category_id: category.id)%>
          <%end%>
          </li>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/posts/homepage", method: "post") do %>
        <%= text_field_tag (:search_term) %>
          <%= submit_tag("Search")%>
        <% end %>
      </div>
    </div>

  </div>

</div>